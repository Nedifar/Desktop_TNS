<Page x:Class="Desktop_TNS.Forms.CrmForming"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_TNS.Forms"
        mc:Ignorable="d"
        Title="CrmForming" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Формирование заявки" HorizontalAlignment="Center" Margin="0 0 0 5" FontSize="20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Телефон абонента:" Margin="0 0 10 0"/>
                <TextBox x:Name="tbPhone" Text="" Width="140"/>
            </StackPanel>
            <StackPanel Margin="0 5 0 5" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Фамилия:" Margin="0 0 10 0"/>
                <TextBox x:Name="tbLastName" Text="" Width="140"/>
            </StackPanel>
            <Button Content="Даллее" Click="clNext"/>
        </StackPanel>
    </Grid>
</Page>
